<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppMinhasCompras.Views.ListaProduto"
             Title="Produtos">

    <VerticalStackLayout Padding="16" Spacing="12">

        <!-- Ações principais -->
        <HorizontalStackLayout Spacing="8">
            <Button Text="Adicionar" Clicked="OnAdicionarClicked" />
            <!-- Vai para cadastro -->
            <Button Text="Atualizar" Clicked="OnAtualizarClicked" />
            <!-- Recarrega a lista -->
        </HorizontalStackLayout>

        <!-- Mensagem quando não houver itens -->
        <Label x:Name="Vazio" Text="Nenhum produto cadastrado."
           IsVisible="False" TextColor="#666" />

        <!-- Pull-to-refresh envolvendo a lista -->
        <RefreshView x:Name="Refresh" Refreshing="OnRefreshing">

            <!-- Lista de produtos -->
            <CollectionView x:Name="Lista"
                      SelectionMode="Single"
                      SelectionChanged="OnSelectionChanged">
                <!-- Cabeçalho simples tipo “colunas” -->
                <CollectionView.Header>
                    <Grid ColumnDefinitions="*,Auto,Auto,Auto" Padding="6,2">
                        <Label Text="Produto" FontAttributes="Bold" />
                        <Label Grid.Column="1" Text="Qnt"   FontAttributes="Bold" HorizontalTextAlignment="End" />
                        <Label Grid.Column="2" Text="Preço" FontAttributes="Bold" HorizontalTextAlignment="End" />
                        <Label Grid.Column="3" Text="Total" FontAttributes="Bold" HorizontalTextAlignment="End" />
                    </Grid>
                </CollectionView.Header>

                <!-- Item com Swipe para Excluir -->
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <SwipeView>
                            <SwipeView.RightItems>
                                <SwipeItems Mode="Reveal">
                                    <SwipeItem Text="Excluir"
                             BackgroundColor="Tomato"
                             Invoked="OnExcluirSwipe"
                             CommandParameter="{Binding}" />
                                </SwipeItems>
                            </SwipeView.RightItems>

                            <Grid ColumnDefinitions="*,Auto,Auto,Auto" Padding="6,10">
                                <Label Text="{Binding Descricao}" />
                                <Label Grid.Column="1" Text="{Binding Quantidade}" HorizontalTextAlignment="End" />
                                <Label Grid.Column="2" Text="{Binding Preco, StringFormat='R$ {0:N2}'}" HorizontalTextAlignment="End" />
                                <Label Grid.Column="3" Text="{Binding Total, StringFormat='R$ {0:N2}'}" HorizontalTextAlignment="End" />
                            </Grid>
                        </SwipeView>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>
    </VerticalStackLayout>
</ContentPage>