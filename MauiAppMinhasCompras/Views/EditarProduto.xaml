<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppMinhasCompras.Views.EditarProduto"
             Title="Editar Produto">
    <ScrollView>
        <VerticalStackLayout Padding="16" Spacing="12">
            <Entry x:Name="TxtDescricao" Placeholder="Descrição" />
            <Entry x:Name="TxtQuantidade" Placeholder="Quantidade" Keyboard="Numeric" />
            <Entry x:Name="TxtPreco" Placeholder="Preço" Keyboard="Numeric" />
            <Button Text="Salvar alterações" Clicked="OnSalvarClicked" />
            <!-- Atualiza -->
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>